            android:name="myArg"
            android:defaultValue="-1"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="cn.edu.jnu.agile7.ui.Account.AccountFragment"
        android:label="@string/title_notifications" >
        <argument
            android:name="myArg"
            android:defaultValue="-1"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/navigation_bill"
        android:name="cn.edu.jnu.agile7.ui.bill.BillFragment"
        android:label="Bill" >
        <argument
            android:name="myArg"
            android:defaultValue="-1"
            app:argType="integer" />
